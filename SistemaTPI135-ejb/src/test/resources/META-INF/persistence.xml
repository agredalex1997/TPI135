<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/_mantenimientoTest</jta-data-source>
    <class>ues.edu.sv.mantenimientolib.Area</class>
    <class>ues.edu.sv.mantenimientolib.Calendario</class>
    <class>ues.edu.sv.mantenimientolib.DetalleEquipo</class>
    <class>ues.edu.sv.mantenimientolib.DetallePeticion</class>
    <class>ues.edu.sv.mantenimientolib.DiagnosticoHardware</class>
    <class>ues.edu.sv.mantenimientolib.DiagnosticoSoftware</class>
    <class>ues.edu.sv.mantenimientolib.Equipo</class>
    <class>ues.edu.sv.mantenimientolib.Estado</class>
    <class>ues.edu.sv.mantenimientolib.ExcepcionCalendario</class>
    <class>ues.edu.sv.mantenimientolib.Hardware</class>
    <class>ues.edu.sv.mantenimientolib.Marca</class>
    <class>ues.edu.sv.mantenimientolib.Modelo</class>
    <class>ues.edu.sv.mantenimientolib.OrdenTrabajo</class>
    <class>ues.edu.sv.mantenimientolib.OrigenPeticion</class>
    <class>ues.edu.sv.mantenimientolib.Pasos</class>
    <class>ues.edu.sv.mantenimientolib.PasosProcedimiento</class>
    <class>ues.edu.sv.mantenimientolib.PersonalMantenimiento</class>
    <class>ues.edu.sv.mantenimientolib.Peticion</class>
    <class>ues.edu.sv.mantenimientolib.Procedimiento</class>
    <class>ues.edu.sv.mantenimientolib.TipoMantenimiento</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:mantenimientoTpi;INIT=create schema if not exists mantenimientoTpi;"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
